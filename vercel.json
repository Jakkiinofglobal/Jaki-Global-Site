{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "client/dist" } },
    { "src": "server/index.ts", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server/$1" },
    { "source": "/(.*)", "destination": "/client/dist/index.html" }
  ]
}
