{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://YOUR-RENDER-BACKEND.onrender.com/api/:path*"
    }
  ],
  "routes": [
    {
      "src": "/((?!assets|favicon\\.ico).*)",
      "dest": "/index.html"
    }
  ]
}
